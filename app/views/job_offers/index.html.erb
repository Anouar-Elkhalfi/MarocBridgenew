<h1>Offres d'emploi</h1>
<%= link_to "Nouvelle offre", new_job_offer_path, class: "btn btn-success" %>
<%= link_to "Accueil", root_path, class: "btn btn-primary" %>
<ul>
  <% @job_offers.each do |offer| %>
    <li>
      <%= link_to offer.title, job_offer_path(offer) %> (<%= offer.location %>)
    </li>
  <% end %>
</ul>
